{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ES2020",
      "outDir": "dist/esm",
      "baseUrl": "src",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
    },
    "include": [
      "src/**/*.ts",
    ], 
    "exclude": [
      "./node_modules",
      "./dist","./test"
    ]
  }
  
  