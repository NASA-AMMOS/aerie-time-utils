{
    "compilerOptions": {
      "target": "ES2019",
      "module": "CommonJS",
      "outDir": "dist/cjs",
      "baseUrl": "src",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
    },
    "include": [
      "src/**/*.ts",
    ],
    "exclude": [
      "./node_modules",
      "./dist","./test"
    ]
  }